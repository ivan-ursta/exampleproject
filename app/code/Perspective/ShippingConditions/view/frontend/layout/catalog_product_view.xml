<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.main">
            <block class="Magento\Framework\View\Element\Template"
                   name="product.shipping.condition"
                   template="Perspective_ShippingConditions::product/view/shipping_conditions.phtml"
                   after="product.info.price">
                <arguments>
                    <argument name="view_model" xsi:type="object">Perspective\ShippingConditions\ViewModel\ShippingView</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
